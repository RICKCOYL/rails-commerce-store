<section class="col my-5">
    <div>
       <figure>
          <%= image_tag line_item.product.image, size: "200x200" %>
       </figure>
       <div>
        <strong><%= line_item.product.title %></strong>
       <p>Total Price: <%= number_to_currency(line_item.total_price) %></p>
       <p>
          <%= truncate(line_item.product.description, length: 100) %>
       </p>

       </div>
    </div>
<div>
    <%= button_to "Remove", line_item, method: :delete, data: { confirm: "Are you sure?" } %>
</div>
</section>
